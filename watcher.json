{
  "trigger": {
    "schedule": {
      "interval": "1m"
    }
  },
  "input": {
    "search": {
      "request": {
        "search_type": "query_then_fetch",
        "indices": ["heartbeat-*"],
        "rest_total_hits_as_int": true,
        "body": {
          "size": 0,
          "query": {
            "bool": {
              "must": [
                {
                  "term": {
                    "monitor.status": {
                      "value": "down"
                    }
                  }
                }
              ],
              "filter": [
                {
                  "range": {
                    "@timestamp": {
                      "from": "now-2m"
                    }
                  }
                }
              ]
            }
          },
          "aggregations": {
            "by_url": {
              "terms": {
                "field": "url.full",
                "size": 10,
                "min_doc_count": 1
              }
            },
            "by_http_content": {
              "terms": {
                "field": "http.response.body.content"
              }
            }
          }
        }
      }
    }
  },
  "condition": {
    "compare": {
      "ctx.payload.hits.total": {
        "gt": 1
      }
    }
  },
  "actions": {
    "notify-slack": {
      "throttle_period_in_millis": 300000,
      "slack": {
        "message": {
          "from": "Heartbeat",
          "to": ["dvadgama"],
          "text": "Something Went Wrong.",
          "dynamic_attachments": {
            "list_path": "ctx.payload.aggregations.by_url.buckets",
            "attachment_template": {
              "color": "danger",
              "title": "{{key}}",
              "title_link": "{{key}}",
              "text": "{{ctx.payload.aggregations.by_http_content.buckets.key}}"
            }
          }
        }
      }
    }
  }
}
